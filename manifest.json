{
    "manifest_version": 3,
    "name": "YouTube Lock",
    "version": "1.0",
    "description": "Locks browser to YouTube for a timed session with password unlock.",
    "permissions": [
        "tabs",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}